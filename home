<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Rank Checker</title>
</head>
<body>
    <h1>User Rank Checker</h1>
    <form id="rankForm">
        <label for="userId">Enter User ID:</label>
        <input type="text" id="userId" name="userId" required>
        <button type="submit">Check Rank</button>
    </form>
    <div id="rankResult"></div>

    <script>
        document.getElementById('rankForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const userId = document.getElementById('userId').value.trim();
            if (userId) {
                fetchRank(userId);
            } else {
                alert('Please enter a valid user ID.');
            }
        });

        function fetchRank(userId) {
            // Replace 'YOUR_GOOGLE_SHEET_ID' and 'YOUR_API_KEY' with your actual values
            const sheetId = 'YOUR_GOOGLE_SHEET_ID';
            const apiKey = 'YOUR_API_KEY';
            const range = 'shortlist!A:C'; // Specify the range to include columns A to C
            const url = `https://sheets.googleapis.com/v4/spreadsheets/${sheetId}/values/${range}?key=${apiKey}&valueInputOption=USER_ENTERED`;

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    const values = data.values;
                    const userIndex = values.findIndex(row => row[1] === userId);
                    if (userIndex !== -1) {
                        const rank = values[userIndex][0];
                        const name = values[userIndex][2];
                        document.getElementById('rankResult').textContent = `User ${userId} (${name}) has rank ${rank}.`;
                    } else {
                        document.getElementById('rankResult').textContent = `User ${userId} not found.`;
                    }
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                    document.getElementById('rankResult').textContent = 'An error occurred. Please try again later.';
                });
        }
    </script>
</body>
</html>
